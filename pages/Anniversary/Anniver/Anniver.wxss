.anniver-container{
  position: absolute;
  color: #fff;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-image: url('https://cloud-minapp-23784.cloud.ifanrusercontent.com/1gmVerWGrfXXoSe7.jpg');
  background-size: cover;
}
.wrapper{
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}
.showTip{
  text-align: center;
  width: 80%;
  margin: 20rpx auto;
  font-size: 40rpx;
}
.addAnniver{
  position: fixed;
  bottom: 10rpx;
  left: 0;
  margin: 0 auto;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  color: #fff;
  box-shadow: inset 2px 2px 2px 2px #fff;
  line-height: 80rpx;
  text-align: center;
  font-size: 70rpx;
  background-color: transparent;
  border-radius: 50%;
}
.anniver-view{
  display: flex;
  justify-content: space-around;
  text-align: center;
  width: 86%;
  box-shadow:inset 0 0 2px #eee;
  padding: 20rpx;
  border-radius: 5px;
  margin: 20rpx auto;
  background: rgba(255,255,255,0.3);
}
.anniver-view .event-start{
  width: 45%;
  text-align: center;
  padding: 10rpx;
  line-height: 50rpx;
}
/* pages/first/xin/xin.wxss */
.page {
  position: relative;
  height: 100%;
  background-color:#FFF5EE;
}
.lists {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color:#FFF5EE;
}
.list-i {
  padding: 18rpx 0;
  margin-left: 20px;
  display: flex;
  flex-direction: column;
  width: 90%;
  background: #e0f6ff;
  border: 3px solid #fff;
  border-radius: 15px;
}
.content {
  padding: 0 28rpx;
  line-height: 118rpx;
  text-align: left;
}
.date {
  padding: 0 28rpx;
  line-height: 88rpx;
  text-align: left;
}
.sender {
  padding: 0 28rpx;
  line-height: 88rpx;
  text-align: left;
}
.add {
  position: absolute;
  right: 58rpx;
  bottom: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  background: #b3fbdb;
  border: 1px solid #888;
  border-radius: 50%;
}
.add image {
  width: 48rpx;
  height: 48rpx;
  bottom: 0;
}
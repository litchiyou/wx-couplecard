page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color:#FFF5EE;
}
.content {
  position: absolute;
  left: 10px;
  height: 75%;
  width: 90%;
  text-align:left;
  text-indent: 0.5em;
  border-radius: 15px;
  border: 3px solid black;
  background-color:white;
}
.placeholder{
  text-align:left;
}

.time-select-view{
  padding-left:10rpx; 
  position: absolute;
  margin-top: 40rpx; 
  margin-bottom: 40rpx;
  bottom: 12%;
  left: 20px;
}
.btns {
  width: 100%;
  height: 10%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: skyblue;
  position: absolute;
  bottom: 0;
}
